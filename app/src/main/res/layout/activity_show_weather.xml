<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wxLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowWeatherActivity">

    <LinearLayout
        android:id="@+id/wx"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/wxHeading"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:text="@string/default_weather_heading" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:text="@string/default_weather_text" />

        <Button
            android:id="@+id/wxAiButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:insetLeft="6dp"
            android:insetTop="6dp"
            android:insetRight="6dp"
            android:insetBottom="6dp"
            android:text="@string/weather_ai_insight_button_text" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>